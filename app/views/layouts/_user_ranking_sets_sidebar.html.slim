          - else
            .row
              .col-xs-12
                = link_to 'ALL', edit_user_ranking_set_duel_rank_path(@user_ranking_set, :all, per_page: @per_page), class: "btn btn-full-width btn-default #{'btn-primary' if position_is_selected(:all, on_duel_rank_page) }"
