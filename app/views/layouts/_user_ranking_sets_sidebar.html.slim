  .row
    .col-xs-12
      - if on_duel_rank_page
        .collapsible-tab.selected
          span
            = fa_icon('gavel')
          ' &nbsp;&nbsp;Duel
      - else
        a.notes-toggle#duel_rank_collapse_toggle data-toggle="collapse" href="#duel_rank_tab" role="button" aria-expanded="#{on_duel_rank_page}" aria-controls="duel_rank_tab"
          .collapsible-tab
