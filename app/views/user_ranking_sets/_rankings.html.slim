.container-fluid
  .col-xs-8
    .row.player-list
      #player-list.col-xs-12 data-url="#{sort_user_ranking_sets_path(id: ranking_set.id)}"
        = f.fields_for :user_ranking_players do |player_f|
          - player = player_f.object
          / = player_f.hidden_field :id
          .row.player-card id="#{dom_id(player)}" class='player-ranking-form'
            = player_f.hidden_field :ovr_rank, class: 'ovr-rank-field'
            = player_f.hidden_field :position, class: 'position-field'
            .col-xs-12
              .row
                .col-xs-1.text-center.ranking-tab
                  = player.ovr_rank
                .col-xs-11.player-info
                  .row
                    .col-xs-12.text-left.card-title
                      ' #{player.display_name} - #{player.display_team}
                  .row.text-left
                    .col-xs-6.player-essential-info
                      .row
                        .col-xs-12
                          ' Age: #{player.display_age}
                      .row
                        .col-xs-12
                          ' Pos: #{player.display_positions}
                    .col-xs-6.player-fantasy-info
                      .row
                        .col-xs-12
                          - if player.elo_score.present?
                            ' ELO: #{player.elo_score}
                      .row
                        .col-xs-12
                          = link_to 'Fangraphs', player.fg_link, target: :_blank
              .row
                .col-xs-12
                  = player_f.text_field :notes
  .col-xs-4
    = render 'players/sidebar_filter', filter_path: user_ranking_set_path(ranking_set)